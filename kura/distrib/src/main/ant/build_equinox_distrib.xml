cp /opt/eclipse/kura/kura/config.ini /tmp/.kura/configuration/

nohup java -Xms${kura.mem.size} -Xmx${kura.mem.size} -XX:MaxPermSize=${kura.mem.size} -Dkura.os.version=${kura.os.version} \
	-Dkura.arch=${kura.arch} \
