<MetaData xmlns="http://www.osgi.org/xmlns/metatype/v1.2.0" localization="en_us">
    <OCD id="org.eclipse.kura.lwm2m.LwM2mClientKura" 
         name="LwM2mClient" 
         description="The LwM2mClient exposes Kura as a LwM2m Device.">

        <Icon resource="CloudService" size="32"/>
        
        <AD id="client.ip-address"
            name="client.ip-address"
            type="String"
            cardinality="0"
            required="false"
            default=""
            description="">
        </AD>

        <AD id="client.port"
            name="client.port"
            type="Integer"
            cardinality="0"
            required="true"
            default="5684"
            description="">
        </AD>
        
        <!-- default to: leshan.eclipse.org -->
        <AD id="server.ip-address"
            name="server.ip-address"
            type="String"
            cardinality="0"
            required="false"
            default="5.39.83.206"
            description="">
        </AD>

        <AD id="server.port"
            name="server.port"
            type="Integer"
            cardinality="0"
            required="true"
            default="5683"
            description="">
        </AD>
        
        <AD id="update.period"
            name="update.period"
            type="Integer"
            cardinality="0"
            required="true"
            default="1"
            description="Registration update delay (minutes)"/>

    </OCD>
    
    <Designate pid="org.eclipse.kura.lwm2m.LwM2mClientKura">
        <Object ocdref="org.eclipse.kura.lwm2m.LwM2mClientKura"/>
